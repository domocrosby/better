#div
   background green
   height 5000px
   width 100%
   
.image
   border-radius 50px
   height 30px

// Variables

speed = 0.5s

// Sizing
mrg = 15px
logoSize = 24px
navHeight = 52px
tabWidth = 50px
railWidth = 250px

//colors
navColor = #1e1e1e
lightGrey = #343434
titleGrey = #d2d2d2
white = #ffffff
bodyColor = #f9f9f9
tabColor = #343434
iconDisabled = #5c5c5c
iconEnabled = #d6d6d6
railColor = #262626
iconColor = #5d5d5d
iconSelectColor = #d6d6d6

// Mixins


// Styling

// Text

#title
   font-variant: small-caps

#title
   color: white

#title
   font-size:14px
   
.icon
   color: iconColor
   
.selected.icon, .icon:hover
   color: iconSelectColor
   
.icon
   text-align: center
   
.icon span
   font-size: large;

// Color

#nav
   background: navColor
   
#tab
   background: tabColor
   
body
   background: bodyColor
   
#rail
   background: railColor
//borders



// positioning

#title, #main, #tab
   display: inline-block
   
.icon
   display: block

#tab
   right: 0px
   
#rail
   right: tabWidth
   
#tab, #main, #rail
   position: absolute
   
html, body
   overflow: hidden
   


   
// sizing

#nav
   height:navHeight
   
#title
   line-height:navHeight
   
#logo
   width: logoSize
   
#logo
   height: logoSize
   
#main
   width: 100%
   
#rail, #main, #tab, html, body
   height: 100%
   
#tab, .icon
   width: tabWidth
   
.icon
   height: tabWidth
   
#rail
   width: 0px;
   

//padding

#main
   padding-right: 60px
   
#main
   padding-left: 10px

#main
   padding-top: 10px
   
//margin

#logo
   margin: 0px mrg 0px mrg
   
.icon
   padding: mrg
   
// Animation

#main
   transition: padding-right speed

#rail
   transition: width speed
   
.icon:hover
   cursor: pointer

