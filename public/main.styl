// Starting again from here

// Variables

speed = 0.5s
mrg = 15px
lineSize = 30px
darkGreen = #6fcab9
darkGrey = #1e1e1e
lightGrey = #343434

// Mixins
//// Colors

bkg-light-green()
   background:#84d1c3
   
bkg-white()
   background:#ffffff
   
fnt-light-green()
   color:#84d1c3
   
fnt-white()
   color:#ffffff
   
/// Sizes

fnt-size-icon()
   font-size: 25px
   line-height: 15px
   
icon-padding()
   padding: 10px
   
topMargin()
   margin-top: mrg

bottomPadding()
   padding-bottom: mrg

// Styling

// Text

#title
   font-variant: small-caps

#title
   fnt-white()

// Color

#adRail, #adBtn
   bkg-white()

#main
   background: darkGrey

// positioning

#adBtn, #title
   display: inline-block
   
// sizing

#search
   length:100%

// Animation

#main
   transition: margin-right speed


// Styling


   
#search
   bkg-light-green()
   
#adBtn
   fnt-light-green()
   fnt-size-icon()
   icon-padding()
   float: right
   topMargin()
   
#nav
   bottomPadding()
   
#logo
   width: lineSize
   height: lineSize
   margin: mrg mrg 0px mrg
   



/* On smaller screens, where height is less than 450px, change the style of the sidenav (less padding and a smaller font size) */
@media screen and (max-height: 450px) {
    .sidenav {padding-top: 15px;}
    .sidenav a {font-size: 18px;}
}
   
