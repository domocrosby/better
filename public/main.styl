// THROWAWAY WORK

html, body {margin: 0; height: 100%; overflow: hidden}

// Variables

speed = 0.5s

// Sizing
mrg = 15px
logoSize = 24px
navHeight = 52px
tabWidth = 50px

//colors
navColor = #1e1e1e
lightGrey = #343434
titleGrey = #d2d2d2
white = #ffffff
bodyColor = #f9f9f9
tabColor = #343434
iconDisabled = #5c5c5c
iconEnabled = #d6d6d6

// Mixins


// Styling

// Text

#title
   font-variant: small-caps

#title
   color: white

#title
   font-size:14px

// Color

#rail
   background:white

#nav
   background: navColor
   
#tab
   background: tabColor
   
body
   background: bodyColor

// positioning

#title, #main, #tab
   display: inline-block
   
#tab
   right: 0px
   
#tab
   position: absolute
   
   
   
// sizing

#nav
   height:navHeight
   
#title
   line-height:navHeight
   
#logo
   width: logoSize
   
#logo
   height: logoSize
   
#main
   width: 100%
   
#tab
   height: 100%
   
#tab
   width: tabWidth

//padding

//margin

#logo
   margin: 0px mrg 0px mrg
   
#main
   margin-right: -tabWidth
   
// Animation

#main
   transition: margin-right speed


